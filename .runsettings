<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat Code Coverage">
        <Configuration>
          <Format>cobertura</Format>
          
          <!-- Exclude frontend files -->
          <ExcludeByFile>
            **/*.cshtml,
            **/*.cshtml.cs,
            **/Program.cs,
            **/Migrations/**/*.cs,
            **/wwwroot/**/*.*
          </ExcludeByFile>
          
          <!-- Optional: Also exclude by namespace pattern -->
          <Exclude>
            [*]*.Pages.*,
            [*]*.Migrations.*
          </Exclude>
          
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
</RunSettings>