<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RZ_nepremicnine</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RZ_nepremicnine.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container">
                <a class="navbar-brand logo" asp-area="" asp-page="/Index">Nepremičnine</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link nav-item-custom" asp-area="" asp-page="/Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link nav-item-custom" asp-area="" asp-page="/Properties/Browse">Kupi</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link nav-item-custom" asp-area="" asp-page="/Properties/Add">Ustvari oglas</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link nav-item-custom" asp-area="" asp-page="/Admin/Manage">Upravljaj</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto login-container">
                        <li class="nav-item">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="content-wrapper">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <h3>Nepremičnine</h3>
                <p style="color: var(--text-secondary);">Moderne rešitve za nepremičnine s pomočjo tehnologije.</p>
            </div>
            <div class="footer-section">
                <h3>Hitre povezave</h3>
                <ul>
                    <li><a asp-area="" asp-page="/Index">Home</a></li>
                    <li><a asp-area="" asp-page="/Properties/Browse">Kupi</a></li>
                    <li><a asp-area="" asp-page="/Properties/Add">Ustvari oglas</a></li>
                    <li><a asp-area="" asp-page="/Admin/Manage">Upravljaj</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>Kontakt</h3>
                <ul>
                    <li>📧 info@nepremicnine.si</li>
                    <li>📞 (01) 234-5678</li>
                    <li>📍 Ljubljana, Slovenija</li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 Nepremičnine. Vse pravice pridržane.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
